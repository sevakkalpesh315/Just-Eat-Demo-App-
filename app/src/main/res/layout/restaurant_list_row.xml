<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ivCoverImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_toRightOf="@id/ivCoverImage"
        android:layout_marginLeft="16dp"
        style="@style/TitleText"
        android:id="@+id/tvRestaurantName"
        android:layout_marginBottom="12dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="6"
        android:layout_toRightOf="@id/ivCoverImage"
        android:layout_below="@id/tvRestaurantName"
        android:layout_marginLeft="16dp"
        android:id="@+id/rbListRating"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rbListRating"
        android:layout_below="@id/tvRestaurantName"
        android:text="(Number)"
        android:id="@+id/tvListItemRating"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivCoverImage"
        android:layout_below="@id/rbListRating"
        android:layout_marginLeft="16dp"
        android:text="Cuisine"
        android:id="@+id/tvCuisine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvCuisine"
        android:layout_marginLeft="16dp"
        android:text="Yes"
        android:id="@+id/tvHalalYesNo"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tvHalalYesNo"
        android:layout_below="@id/tvCuisine"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Halal: "
        android:id="@+id/tvHalal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/tvCloseOpen"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/ivCoverImage"
        android:layout_below="@id/tvCuisine"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>